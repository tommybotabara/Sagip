<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#263238"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/alert_dialog_emergency_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:background="#757575">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#000000"
            android:drawableTint="@color/dark_hint"
            android:textColor="#757575"
            android:drawableRight="@drawable/ic_edit_24dp"
            android:layout_marginBottom="40dp"
            android:text="Emergency Report Information" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.25"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"

                android:drawableTint="@color/dark_hint"
                android:drawableLeft="@drawable/ic_location_24dp"
                android:text="Location" />

            <EditText
                android:id="@+id/alert_dialog_emergency_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:inputType="textMultiLine"
                android:hint="Incident Location" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.25">
            <TextView
                android:id="@+id/alert_dialog_emergency_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:drawableTint="@color/dark_hint"
                android:drawableLeft="@drawable/ic_description_24dp"
                android:layout_marginStart="10dp"
                android:text="Details"
                />

            <EditText
                android:id="@+id/alert_dialog_emergency_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:hint="Incident Narration"
                android:inputType="textMultiLine"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/alert_dialog_emergency_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/btn_shape"
                android:text="Submit" />

            <Button
                android:id="@+id/alert_dialog_emergency_false_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="False Alarm" />
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>

</LinearLayout>